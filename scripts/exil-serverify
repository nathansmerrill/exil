#!/bin/bash

cd $EXIL_DIR

# Comment flask serving
sed -ie "/@app.route('\/')/,+3 s/^/#/" server/exil.py
# Generate new flask secret key
sed -i "s/d89c947658f73ff238867e61dfce7626/$(python3 -c 'import secrets; print(secrets.token_hex(16))')/" server/exil.py
# Serve on port 8021
sed -i "s/port=4000/port=8021/" server/exil.py
# Connect to port 8021
sed -i "s/localhost:4000/exil.nathanm.cf:8021/" public/game.js
